<!doctype html>
<html lang="en-us">

<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../css/main.css">
</head>

<body class="signup-body">
    <header class="prim-header">
        <!-- Top Navigation Menu -->
        <button class="mobile-nav-toggle fa fa-bars" aria-controls="primary-nav" aria-expanded="false">
            <span class="sr-only">Menu</span>
        </button>

        <nav>
            <ul id="primary-nav" data-visible="false" class="primary-nav flex">
                <li> <a href="/" class="links active">Homepage</a></li>
                <% if (user) {%>
                <li> <a class="links" href="/auth/logout">Logout</a></li>
                <% } else {%>
                <li> <a class="links" href="/auth/login">Login</a></li>
                <% } %>
                <li> <a class="links" href="/profile">Profile</a></li>
                <li> <a class="links" href="/recovery/gambling">Gambling</a></li>
                <li> <a class="links" href="/recovery/sexual">Sexual</a></li>
                <li> <a class="links" href="/recovery/substance">Substance</a></li>
                <li> <a class="links" href="/recovery/technology">Technology</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h1>Login</h1>
        <form class="registerForm">
            <h3>Sign In</h3>

            <label for="email">Email</label>
            <input type="text" placeholder="Email" id="email">

            <label for="password">Password</label>
            <input type="password" placeholder="Password" id="password">

            <button class="button" >Sign In</button>
            <div class="social">
                <a href='/auth/google'>
                    <div class="go"><i class="fab fa-google"></i> Google</div>
                </a>
                <a href='/auth/facebook'>
                    <div class="fb"><i class="fab fa-facebook"></i> Facebook</div>
                </a>
            </div>
            <p>Don't have an account yet? <span><a href='/auth/register'> Sign up here</a></span></p>

        </form>

    </main>
    <script src="../js/nav.js"></script>

</body>

</html>