<!doctype html>
<html lang="en-us">

<head>
  <title>Capstone</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="../css/main.css">
  <link rel="stylesheet" type="text/css" href="../css/contacts.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
  <header>

  </header>
  <nav class="navbar">
    <ul>
      <% if (user) {%>
      <li> <a href="/auth/logout">Logout</a></li>
      <% } else {%>
      <li> <a href="/auth/login">Login</a></li>
      <% } %>
      <li> <a href="/">Homepage</a></li>
      <li> <a href="/profile">Profile</a></li>
      <li> <a href="/recovery/gambling">Gambling</a></li>
      <li> <a href="/recovery/sexual">Sexual</a></li>
      <li> <a href="/recovery/substance">Substance</a></li>
      <li> <a href="/recovery/technology">Technology</a></li>
    </ul>
  </nav>
  <main>
    <h1>Welcome to the profile page</h1>
    <h2>Get Your Daily Quote</h2>
    <div class="quote-wrapper">
      <div class="content">
        <div class="quote-area">
          <i class="fas fa-quote-left"></i>
          <p class="quote"></p>
          <i class="fas fa-quote-right"></i>
        </div>
        <div class="author">
          <span>__</span>
          <span class="name"></span>
        </div>
      </div>
      <div class="buttons">
        <div class="features">
          <ul>
            <li class="speech"><i class="fas fa-volume-up"></i></li>
          </ul>
          <button>New Quote</button>
        </div>
      </div>
    </div>
    <div class="contacts-wrapper">
      <% if (contacts .length > 0) { %>
      <%  contacts.forEach(contact => { %>

      <p class="name"><%= contact.fullname %></p>
      <p class="phone"><%= contact.phone %></p>
      <p class="email"><%= contact.email %></p>
      <button class="edit" data-doc="<%= contact._id %>">Edit</button>
      <button class="delete" data-doc="<%= contact._id %>">Delete</button>

      <% }) %>
      <% } else { %>

      <p>You have no contacts added. Would you like to add one now?</p>
      <div class="createContact">
        <form action="/profile" method="POST">
          <label for="fullname"></label>
          <input type="text" id="fullname" class="input-bar" name="fullname" required></input>

          <label for="phone"></label>
          <input type="text" id="phone" class="input-bar" name="phone" required></input>

          <label for="email"></label>
          <input type="email" id="email" class="input-bar" name="email" required></input>
          <button>Submit</button>
        </form>
      </div>
      <% } %>
    </div>
  </main>
  <script src="../js/externalJS.js"></script>

</body>

</html>